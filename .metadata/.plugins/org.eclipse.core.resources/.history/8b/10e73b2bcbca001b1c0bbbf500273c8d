package br.com.fiap.bean;

import java.util.List;

import javax.enterprise.context.RequestScoped;
import javax.faces.application.FacesMessage;
import javax.faces.context.FacesContext;
import javax.inject.Named;

import br.com.fiap.dao.UserDAO;
import br.com.fiap.model.User;

@Named
@RequestScoped
public class HotelBean {
private Hotel hotel = new User();
	
	public void save() {
		new HotelDAO().save(this.hotel);
		System.out.println("saving..." + this.hotel);
		FacesContext.getCurrentInstance().addMessage(null, 
				new FacesMessage("Hotel cadastrado com sucesso"));
	}
	
	public String login() {
		return "index";
	}
	public String registerRedirect() {
		System.out.println("Est√° aqui!");
		return"register";
		
	}
	
	public Hotel getUser() {
		return user;
	}
	public void setUser(Hotel user) {
		this.user = user;
	}
	public List<Hotel> getAllUsers(){
		
		return new UserDAO().getAll();
	}
}
